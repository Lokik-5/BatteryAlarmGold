<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Top level DayNight theme. -->
    <style name="Theme.BatteryAlarmGold.DayNight.Gold">

        <!-- Material color attributes (dark theme). -->

        <!-- colorPrimary colors map to components and elements, such as app bars and buttons.
             colorSecondary colors are most often used as accents on components, such as FABs
             and selection controls.
             colorPrimaryVariant, colorSecondaryVariant an alternate shade of the colorPrimary
             and colorSecondary. -->
        <item name="colorPrimary">@color/gray_400</item>
        <item name="colorPrimaryVariant">@color/gray_500</item>
        <item name="colorSecondary">@color/yellow_700</item>
        <item name="colorSecondaryVariant">@color/yellow_900</item>

        <!-- "On" colors define how text, icons and strokes are colored in relation to the surface
             on which they appear. -->
        <item name="colorOnPrimary">@color/black_900</item>
        <item name="colorOnSecondary">@color/black_900</item>

        <!-- WaveLoadingView customization. -->
        <item name="wlvCenterTitleColor">@color/white_50</item>
        <item name="wlvBatteryOkColor">@color/yellow_700</item>
        <item name="wlvBatteryLowColor">@color/red_300</item>

    </style>

</resources>
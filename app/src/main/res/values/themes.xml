<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base theme, all common styling here. -->
    <style name="Base.Theme.BatteryAlarmGold" parent="Theme.Core.DayNight">
        <!-- Customize your app theme here. -->

        <!-- Component styles. -->
        <item name="sliderStyle">@style/Widget.BatteryAlarmGold.Slider.Fancy</item>
    </style>

    <style name="Theme.BatteryAlarmGold.DayNight" parent="Base.Theme.BatteryAlarmGold" />

    <!-- Top level DayNight theme. -->
    <style name="Theme.BatteryAlarmGold.DayNight.Gold">

        <!-- Material color attributes (light theme). -->

        <!-- colorPrimary colors map to components and elements, such as app bars and buttons.
             colorSecondary colors are most often used as accents on components, such as FABs
             and selection controls.
             colorPrimaryDark colors applied to the status bar (via statusBarColor) and navigation
             bar (via navigationBarColor).
             colorPrimaryVariant, colorSecondaryVariant an alternate shade of the colorPrimary
             and colorSecondary. -->
        <item name="colorPrimary">@color/white_50</item>
        <item name="colorPrimaryVariant">@color/gray_500</item>
        <item name="colorPrimaryDark">@color/white_50</item>
        <item name="colorSecondary">@color/yellow_700</item>
        <item name="colorSecondaryVariant">@color/yellow_900</item>

        <!-- "On" colors define how text, icons and strokes are colored in relation to the surface
             on which they appear. -->
        <item name="colorOnPrimary">@color/black_900</item>
        <item name="colorOnSecondary">@color/black_900</item>

    </style>

    <!-- Slider custom theme. -->
    <style name="ThemeOverlay.BatteryAlarmGold.Slider" parent="ThemeOverlay.Core.Slider">
        <item name="colorPrimary">@color/yellow_700</item>      <!-- Slider color when enabled. -->
        <item name="colorOnSurface">@color/yellow_700</item>    <!-- Slider color when disabled. -->
    </style>

    <!-- Button base theme. -->
    <style name="Base.ThemeOverlay.BatteryAlarmGold.Button" parent="">
        <!-- Button outline color when pressed and text color. -->
        <item name="colorPrimary">@color/yellow_700</item>
    </style>

    <!-- Top level button light theme. -->
    <style name="ThemeOverlay.BatteryAlarmGold.Button" parent="Base.ThemeOverlay.BatteryAlarmGold.Button"/>

</resources>
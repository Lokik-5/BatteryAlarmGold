<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- ============================== Cut shapes. ================================= -->

    <!-- Shape Appearance for small components like chips, buttons, text fields and FABs. -->
    <style name="ShapeAppearance.Core.SmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">cut</item>
        <item name="cornerSize">@dimen/small_component_corner_cut_radius</item>
    </style>

    <!-- Shape Appearance for medium components like cards, alert dialogs. -->
    <style name="ShapeAppearance.Core.MediumComponent" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">cut</item>
        <item name="cornerSize">@dimen/medium_component_corner_cut_radius</item>
    </style>

    <!-- Shape Appearance for large components like side and bottom navigation drawers. -->
    <style name="ShapeAppearance.Core.LargeComponent" parent="ShapeAppearance.MaterialComponents.LargeComponent">
        <item name="cornerFamily">cut</item>
        <item name="cornerSize">@dimen/large_component_corner_cut_radius</item>
    </style>


</resources>
<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/img_id_card_icon"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:scaleType="centerInside"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/guide_id_card_icon"
            tools:srcCompat="@tools:sample/avatars" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guide_id_card_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="@integer/guide_percent_30" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/txt_id_card_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            style="@style/Widget.BatteryAlarmGold.TextView.SingleLine"
            android:textAppearance="?attr/textAppearanceBody1"
            android:padding="@dimen/grid_1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/txt_id_card_description"
            app:layout_constraintStart_toEndOf="@id/guide_id_card_icon"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="Title" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/txt_id_card_description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            style="@style/Widget.BatteryAlarmGold.TextView.SingleLine"
            android:textAppearance="?attr/textAppearanceCaption"
            android:paddingHorizontal="@dimen/grid_1"
            android:paddingBottom="@dimen/grid_1"
            app:layout_constraintTop_toBottomOf="@id/txt_id_card_title"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/guide_id_card_icon"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="Description" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</merge>